<p>
  <strong>路線名:</strong>
  <%= station.route_name %>
  
</p>

<p>
  <strong>駅名:</strong>
  <%= station.station_name %>
</p>

<p>
  <strong>徒歩分数:</strong>
  <%= station.walk_time %>
</p>

<% end %>
