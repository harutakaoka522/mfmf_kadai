<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th class= "bikou">備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.price %>円</td>
        <td><%= article.address %></td>
        <td><%= article.age %>年</td>
        <td class="bikou2"><%= article.remark %></td>
     
        <td><%= link_to '詳細', article %></td>
        <td><%= link_to '編集', edit_article_path(article) %></td>
        <td><%= link_to '削除', article, method: :delete, data: { confirm: '実行しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

