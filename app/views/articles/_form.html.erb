<%= form_for(article) do |f| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :物件名 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :賃料 %>
    <%= f.number_field :price %>円
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :築年数 %>
    <%= f.text_field :age %>年
  </div>

  <div class="field">
    <%= f.label :備考 %>
    <%= f.text_area :remark %>
  </div>
  
<%= f.fields_for :stations do |station| %>
  
  <h1>最寄り駅<%= station.index + 1%></h1>
  <div class="field">
  <%= station.label :路線名 %>
  <%= station.text_field :route_name %>
  </div>

  <div class="field">
  <%= station.label :駅名 %>
  <%= station.text_field :station_name %>
  </div>

  <div class="field">
  <%= station.label :徒歩分数 %>
  <%= station.number_field :walk_time %>分
  </div>
  <% end %>


  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>


